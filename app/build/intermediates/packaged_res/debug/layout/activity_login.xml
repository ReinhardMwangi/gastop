<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/lambo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

  <Button
      android:id="@+id/mBtnSignup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="172dp"
      android:layout_marginBottom="115dp"
      android:text="SUBMIT"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <EditText
      android:id="@+id/medtEmail"
      android:textColorHint="#FFC107"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="63dp"
      android:layout_marginTop="61dp"
      android:ems="10"
      android:hint="Enter email"
      android:inputType="textPersonName"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/mEdtPassword"
      android:textColorHint="#FFC107"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="27dp"
      android:ems="10"
      android:hint="Enter Password"
      android:inputType="textPassword"
      app:layout_constraintStart_toStartOf="@+id/medtEmail"
      app:layout_constraintTop_toBottomOf="@+id/medtEmail" />
</androidx.constraintlayout.widget.ConstraintLayout>