<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RefillActivity">

    <Button
        android:id="@+id/mBtnMpesa"
        android:layout_width="254dp"
        android:layout_height="0dp"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="59dp"
        android:text="PAY VIA MPESA"
        app:layout_constraintBottom_toTopOf="@+id/mBtnSupplier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mBtnSupplier"
        android:layout_width="247dp"
        android:layout_height="0dp"
        android:layout_marginBottom="366dp"
        android:text="CALL SUPPLIER"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnMpesa" />
</androidx.constraintlayout.widget.ConstraintLayout>